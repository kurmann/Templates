  "tags": {
    "language": "YAML",
    "type": "item"
  },
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".vs/**",
            ".template_config/**",
            "**/bin/**",
            "**/obj/**",
            "/bin/**",
            "/obj/**",
            ".git/**",
            "Readme.md",
            "LICENSE",
            "nuget.csproj"
          ]
        }
      ]
    }
  ]
}