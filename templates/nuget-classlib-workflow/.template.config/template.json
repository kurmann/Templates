{
  "$schema": "http://json.schemastore.org/template",
  "author": "Patrick Kurmann",
  "classifications": [
    "Kurmann",
    "GitHub"
  ],
  "identity": "Kurmann.ClassLibrary.GitHubWorkfow",
  "name": "Kurmann Class Library GitHub Workflow",
  "shortName": "nuget-classlib-workflow",
